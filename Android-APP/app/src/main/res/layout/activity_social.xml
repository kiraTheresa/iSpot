<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/btnTabFeed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="动态"/>
        <Button android:id="@+id/btnTabProfile" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="我的"/>
    </LinearLayout>
</LinearLayout>
